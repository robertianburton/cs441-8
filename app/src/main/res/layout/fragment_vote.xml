<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoteFragment"
    android:background="#ACCE8A">

    <!-- TODO: Update blank fragment layout -->
    <!--<TextView
        android:id="@+id/textView2"
        android:layout_width="317dp"
        android:layout_height="435dp"
        android:text="@string/hello_vote_fragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->

    <ScrollView
        android:layout_width="366dp"
        android:layout_height="707dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="16dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:text="Favorite Color Ranked Choice Vote"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:text="Tap your first choice vote!"
                android:textStyle="bold"
                android:gravity="center"/>


            <Button
                android:id="@+id/sonSayiDergi"
                style="@style/AppTheme"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="Red"
                android:textSize="18sp" />


            <Button
                android:id="@+id/eDergiler"
                style="@style/AppTheme"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="Blue"
                android:textSize="18sp" />

            <Button
                android:id="@+id/ozelSayilar"
                style="@style/AppTheme"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="Green"
                android:textSize="18sp" />

            <Button
                android:id="@+id/makaleSorgulama"
                style="@style/AppTheme"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="Yellow"
                android:textSize="18sp" />

            <Button
                android:id="@+id/dergiYonetimKurulu"
                style="@style/AppTheme"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="Pink"
                android:textSize="18sp" />

            <Button
                android:id="@+id/dergiBilimKurulu"
                style="@style/AppTheme"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="Purple"
                android:textSize="18sp" />

            <Button
                android:id="@+id/makaleYazımEsasları"
                style="@style/AppTheme"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:text="Teal"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>